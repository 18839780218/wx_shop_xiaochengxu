/*每组属性的主盒子*/  
.attr_box {  
  width: 100%;  
  overflow: hidden;  
  border-bottom: 1rpx solid #ececec;  
}  
/*属性名*/  
.attr_name {  
  width: 20%;  
  float: left;  
  padding: 30rpx 0;  
  font-size: 26rpx;
}  
/*属性值*/  
.attr_value_box {  
  width: 80%;  
  float: left;  
  padding: 15rpx 0;  
  overflow: hidden;  
}  
/*每个属性值*/  
.attr_value {  
  float: left;  
  padding: 10rpx;  
  margin: 0 10rpx;  
  border: 1rpx solid #ececec;  
  font-size: 22rpx;
}  
/*每个属性选中的当前样式*/  
.attr_value_active {  
  background: #FFCC00;  
  border-radius: 10rpx;  
  color: #fff;  
  padding: 10rpx;  
}  


.textarea {
