<!--pages/user/dingdan.wxml-->
<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" data-otype="pay" bindtap="swichNav">待付款</view>
   <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" data-otype="deliver" bindtap="swichNav">待发货</view> 
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" data-otype="receive" bindtap="swichNav">待收货</view>
  <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" data-otype="finish" bindtap="swichNav">已完成</view>
  <view class="swiper-tab-list {{currentTab==4 ? 'on' : ''}}" data-current="4" bindtap="swichNav">退款/售后</view>
</view> 
<view class="c_t60"></view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">

  <!-- 待付款 -->
  <swiper-item> 
    <view class="search_no" wx:if="{{!orderList0.length  && orderList0[0].order_title != null}}">
        <view class="font_14"><image class="scimg" src="/images/search_no.png"></image></view>
        <text>没有可用订单/(ㄒoㄒ)/~~</text>
    </view>

    <view class="shop df" wx:for="{{orderList0}}" wx:if="{{item.order_title != null}}">        
        <image class="sh_slt" src="{{item.order_img}}"></image>
        <view class="df_1">            
            <view class="sp_text">
                <navigator url="../index/detail?productId={{item.pid}}" hover-class="changestyle">
                <view class="sp_tit ovh1">{{item.order_title}}</view>
                </navigator>
                <view class="sp_neb">产品种类：×{{item.zcount}} 购买数量：×{{item.zongliang}}</view>
                <view class="sp_jg">¥：{{item.order_price}}</view>
                <view class="font_12 red fl_r" bindtap="payOrderByWechat" data-orderId="{{item.id}}" data-ordersn="{{item.order_sn}}" >微信支付</view>
                <!--wx:if="{{item.type=='weixin'}}上面支付数据的判断"-->
                <!--<navigator class="font_12 red fl_r" url="../order/downline?orderId={{item.id}}" wx:if="{{item.PayType=='cash'}}">线下支付</navigator>-->

                <view class="font_12 red fl_r mr_5" bindtap="removeOrder" data-ordersn="{{item.order_sn}}">取消订单</view>
                <navigator url="../order/detail?orderId={{item.order_sn}}" class="font_12 red fl_r mr_5">订单详情</navigator>

            </view>
        </view>
    </view>
    <loading hidden="{{myHidden}}">加载中</loading>
  </swiper-item>

  <!-- 待发货 -->
  <swiper-item>
    <view class="search_no" wx:if="{{!orderList1.length}}">
        <view class="font_14"><image class="scimg" src="/images/search_no.png"></image></view>
        <text>没有可用订单/(ㄒoㄒ)/~~</text>
    </view>
    <view class="shop df" wx:for="{{orderList1}}">
        <image class="sh_slt" src="{{item.order_img}}"></image>
        <view class="df_1">            
            <view class="sp_text">
                <navigator url="../index/detail?productId={{item.pid}}" hover-class="changestyle">
                    <view class="sp_tit ovh1">{{item.order_title}}</view>
                </navigator>
                <view class="sp_neb">产品种类：×{{item.zcount}} 购买数量：×{{item.zongliang}}</view>
                <view class="sp_jg">¥：{{item.order_price}}</view>
                <navigator class="font_12 red fl_r" url="tuihuo?orderId={{item.id}}">申请退款</navigator>
                <navigator url="../order/detail?orderId={{item.order_sn}}" class="font_12 red fl_r mr_5">订单详情</navigator>
            </view>
        </view>
    </view>
    <loading hidden="{{myHidden}}">加载中</loading>
  </swiper-item>

  <!-- 待收货 -->
  <swiper-item>
        <view class="search_no" wx:if="{{!orderList2.length}}">
            <view class="font_14"><image class="scimg" src="/images/search_no.png"></image></view>
            <text>没有可用订单/(ㄒoㄒ)/~~</text>
        </view>
        <view class="shop df" wx:for="{{orderList2}}">        
        <image class="sh_slt" src="{{item.order_img}}"></image>
        <view class="df_1">            
            <view class="sp_text">
                <navigator url="../index/detail?productId={{item.pid}}" hover-class="changestyle">
                    <view class="sp_tit ovh1">{{item.order_title}}</view>
                </navigator>
                <view class="sp_neb">产品种类：×{{item.zcount}} 购买数量：×{{item.zongliang}}</view>
                <view class="sp_jg">¥：{{item.order_price}}</view>
                <navigator class="font_12 red fl_r" url="tuihuo?orderId={{item.order_sn}}">申请退款</navigator>
                <view class="font_12 red fl_r mr_5" bindtap="recOrder" data-order-id="{{item.order_sn}}">确认收货</view>
                <navigator url="../order/detail?orderId={{item.order_sn}}" class="font_12 red fl_r mr_5">订单详情</navigator>
                <navigator url="../wuliu/wuliu?ordersn={{item.order_sn}}" class="font_12 red fl_r mr_5">查看物流</navigator>
            </view>
        </view>
    </view>
    <loading hidden="{{myHidden}}">加载中</loading>
  </swiper-item>

  <!-- 已完成-->
  <swiper-item>
    <view class="search_no" wx:if="{{!orderList3.length}}">
        <view class="font_14"><image class="scimg" src="/images/search_no.png"></image></view>
        <text>没有可用订单/(ㄒoㄒ)/~~</text>
    </view>
    <view class="shop df" wx:for="{{orderList3}}">   
        <image class="sh_slt" src="{{item.order_img}}"></image>
        <view class="df_1">            
            <view class="sp_text">
                <navigator url="../index/detail?productId={{item.pid}}" hover-class="changestyle">
                    <view class="sp_tit ovh1">{{item.order_title}}</view>
                </navigator>
                <view class="sp_neb">产品种类：×{{item.zcount}} 购买数量：×{{item.zongliang}}</view>
                <view class="sp_jg">¥：{{item.order_price}}</view>
                <navigator url="../order/detail?orderId={{item.order_sn}}"  class="font_12 red fl_r mr_5">订单详情</navigator>
                <navigator url="../order/detail?orderId={{item.order_sn}}&&judge=1"  class="font_12 red fl_r mr_5" wx:if="{{item.is_pingjia == 0}}">待评价</navigator>
                <view class="font_12 gray fl_r mr_5" wx:if="{{item.is_pingjia == 1}}">已评价</view>
            </view>
        </view>
    </view>
    <loading hidden="{{myHidden}}">加载中</loading>
  </swiper-item>

  <!-- 退款/售后 -->
  <swiper-item>
    <view class="search_no" wx:if="{{!orderList4.length}}">
        <view class="font_14"><image class="scimg" src="/images/search_no.png"></image></view>
        <text>没有可用订单/(ㄒoㄒ)/~~</text>
    </view>

    <view class="shop df" wx:for="{{orderList4}}">
        <image class="sh_slt" src="{{item.order_img}}"></image>
        <view class="df_1">            
            <view class="sp_text">
                <navigator url="../index/detail?productId={{item.pid}}" hover-class="changestyle">
                    <view class="sp_tit ovh1">{{item.order_title}}</view>
                </navigator>
                <view class="sp_neb">产品种类：×{{item.zcount}} 购买数量：×{{item.zongliang}}</view>
                <view class="sp_jg">¥：{{item.order_price}}</view>
                <view class="font_12 red fl_r">{{item.order_status == 4 ? '退款完成': '退款申请中'}}</view>
              
            </view>
        </view>
    </view>
    <loading hidden="{{myHidden}}">加载中</loading>
  </swiper-item>
</swiper>
